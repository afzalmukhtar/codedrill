{
  "$schema": "./codedrill.config.schema.json",

  "providers": {
    "ollama": {
      "enabled": true,
      "baseUrl": "http://localhost:11434"
    },

    "openrouter": {
      "enabled": false,
      "apiKey": "${OPENROUTER_API_KEY}"
    },

    "openai": {
      "enabled": false,
      "apiKey": "${OPENAI_API_KEY}"
    },

    "anthropic": {
      "enabled": false,
      "apiKey": "${ANTHROPIC_API_KEY}"
    },

    "google": {
      "enabled": false,
      "apiKey": "${GOOGLE_AI_API_KEY}"
    },

    "custom": {
      "enabled": false,
      "name": "My LM Studio",
      "baseUrl": "http://localhost:1234/v1",
      "apiKey": "",
      "models": ["local-model-name"]
    }
  },

  "defaultModel": "qwen3:8b",

  "preferences": {
    "timerEasy": 20,
    "timerMedium": 35,
    "timerHard": 50,
    "timerSystemDesign": 45,
    "problemLists": ["neetcode150", "blind75"],
    "dailyNewProblems": 1,
    "dailyReviewProblems": 1,
    "mutationStartsAtAttempt": 3,
    "preferredLanguage": "python",
    "autoIncludeCurrentFile": true,
    "maxContextTokens": 8000
  }
}
